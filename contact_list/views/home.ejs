<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= title %></title>
    <script src="https://kit.fontawesome.com/4d7731185f.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/home.css">
  </head>
  <body>
    <h1 id="page-heading">
      <i class="fas fa-address-book"></i>
      My Contact List
    </h1>
    <div id="contact-list-container">
      <ul >
        <% for (let i of contact_list ){%>
          <li class="contact">
            <div class="details">
              <p> <%= i.name %> </p>
              <p> <%= i.phone %> </p>
          </div>
          <div class="delete-button">
            <a href="/delete-contact/?phone=<%= i.phone %>">
              <i class="fas fa-window-close"
            </a>
          </div>
          </li>
        <%}%>
      </ul>
    </div>

    <form id="new-contact-form" action="/create-contact" method="POST">
        <input type="text" name="name" placeholder="Enter Name" required>
        <input type="number" name="phone" placeholder="Enter Phone_Number">
        <button type="submit">Add Contact</button>
    </form>

    <script type="text/javascript src="/js/home.js"></script>

  </body>
</html>

